<%-include("partial/header") %>
<div class="container-fluid">
    <div class="row">
        <%-include ("partial/sidebar")%>
        <div class="col-lg-9 p-5 ">
                <h1 class="text-center mb-3">Edit User</h1>
                <form action="/admin/update" method="post">

                  <input type="hidden" readonly value="<%= user.id %>" name="id"/>

                  <div class="form-group">
                    <label for="">Name</label>
                    <input type="text" required value="<%= user.name %>"
                      class="form-control" name="name" id="" aria-describedby="helpId" placeholder="">
                    <small id="helpId" class="form-text text-muted">*</small>
                  </div>
                  <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" required value="<%= user.email %>"
                      class="form-control" name="email" id="" aria-describedby="emailHelpId" placeholder="">
                    <small id="emailHelpId" class="form-text text-muted">*</small>
                  </div>

                  

                  <div class="form-group">
                    <label for="">Phone</label>
                    <input type="text" required value="<%= user.phone %>"
                      class="form-control" name="phone" id="" aria-describedby="emailHelpId" placeholder="">
                    <small id="emailHelpId" class="form-text text-muted">*</small>
                  </div>
                  <div class="form-group">
                    <label for="">Password</label>
                    <input type="text" required class="form-control" value="<%= user.password %>" name="password" id="" placeholder="">
                    <small id="emailHelpId" class="form-text text-muted">*</small>
                  </div>
                  
                  <div class="form-group">
                    <label for="">Addtess</label>
                    <input type="text" required value="<%= user.address %>"
                      class="form-control" name="phone" id="" aria-describedby="emailHelpId" placeholder="">
                    <small id="emailHelpId" class="form-text text-muted">*</small>
                  </div>

                  <div class="form-group">
                    <label for="" class="col-lg-12 pl-0">Gender</label>
                    <input type="radio" required value="M" <%= y=(user.gender==="male"?'checked':'') %>
                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" placeholder="">
                      M
                    <input type="radio" required value="F" <%= y=(user.gender==="female"?'checked':'') %>
                      class="form-control-inline" name="gender" id="" aria-describedby="helpId" placeholder="">
                      F
                  </div>

                  <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>

    </div>
</div> 
<script>
  function onchange(val){
    if(val == "offline"){
      let help = document.querySelector("helpId_payment");
      help = "*";
    }
    else{
      let help = document.querySelector("hlelpId_payment");
      help = "9090909090"
    }
  }
</script>   
<%-include("partial/footer")%>